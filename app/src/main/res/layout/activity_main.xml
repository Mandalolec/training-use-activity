<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.laba_4.screens.MainActivity">

    <TextView
        android:id="@+id/userTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="_"
        android:layout_gravity="bottom|center"
        android:layout_marginBottom="450dp"
        tools:layout_editor_absoluteX="125dp"
        tools:layout_editor_absoluteY="225dp" />

    <TextView
        android:id="@+id/phoneTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="_"
        android:layout_gravity="bottom|center"
        android:layout_marginBottom="400dp"
        tools:layout_editor_absoluteX="125dp"
        tools:layout_editor_absoluteY="225dp" />

    <Button
        android:id="@+id/button_toRegister"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|center"
        android:layout_marginLeft="150dp"
        android:text="Назад"
        android:onClick="onClickRegister"
        tools:layout_editor_absoluteX="68dp"
        tools:layout_editor_absoluteY="287dp" />

    <Button
        android:id="@+id/button_setPath"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center"
        android:layout_marginBottom="300dp"
        android:text="Задать поездку"
        android:onClick="onClickToSetRout"
        tools:layout_editor_absoluteX="68dp"
        tools:layout_editor_absoluteY="287dp" />

    <TextView
        android:id="@+id/pathTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_gravity="center"
        android:layout_marginTop="150dp"
        android:layout_marginRight="50dp"
        android:layout_marginLeft="50dp"
        tools:layout_editor_absoluteX="125dp"
        tools:layout_editor_absoluteY="225dp" />

    <Button
        android:id="@+id/button_callTaxi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Вызвать такси"
        android:onClick="onClickCallTaxi"
        android:layout_gravity="bottom|center"
        android:layout_marginBottom="50dp"
        android:enabled="false"
        tools:layout_editor_absoluteX="82dp"
        tools:layout_editor_absoluteY="102dp" />

</FrameLayout>