<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.laba_4.screens.RegistrationActivity">


    <Button
        android:id="@+id/button_ok"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:onClick="onClickGoMain"
        android:text="ok" />

    <TextView
        android:id="@+id/pointFromTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Откуда"
        android:layout_gravity="center|left"
        android:layout_marginBottom="300dp"
        android:layout_marginLeft="10dp" />

    <EditText
        android:id="@+id/startStreetEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center|left"
        android:layout_marginBottom="250dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:hint="Улица"
        android:inputType="text"
        android:text="" />

    <EditText
        android:id="@+id/startHouseEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity= "center|left"
        android:layout_marginBottom="200dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:hint="Дом"
        android:inputType="text"
        android:text="" />

    <EditText
        android:id="@+id/startFlatEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity= "center|left"
        android:layout_marginBottom="150dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:hint="Квартира"
        android:inputType="text"
        android:text="" />

    <TextView
        android:id="@+id/pointToTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Откуда"
        android:layout_gravity="center|left"
        android:layout_marginBottom="100dp"
        android:layout_marginLeft="10dp" />

    <EditText
        android:id="@+id/endStreetEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center|left"
        android:layout_marginBottom="50dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:hint="Улица"
        android:inputType="text"
        android:text=""/>

    <EditText
        android:id="@+id/endHouseEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity= "center|left"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:hint="Дом"
        android:inputType="text"
        android:text="" />

    <EditText
        android:id="@+id/endFlatEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity= "center|left"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:hint="Квартира"
        android:inputType="text"
        android:text="" />
</FrameLayout>